@model IEnumerable<Ekart.Models.Product>

@{
    ViewData["Title"] = "HomePage";
    Layout = "_Layout";
}


<header class="header">

    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1>Ekart</h1>
                <h2>Home Page</h2>
            </div>
            <div class="col-lg-6">
                <nav class="header__menu">
                    <ul>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__cart">
                    <ul>
                        <li><a href="#"><i class="fa fa-heart"></i> <span>@ViewBag.WishList</span></a></li>
                        <li><a asp-controller="Cart" asp-action="Details" class="icon-shopping-cart" style="font-size: 15px">
    <i class="fa fa-shopping-bag"></i> <span>@ViewBag.CartValue</span>
</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">

            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form asp-controller="Search" asp-action="Results">
                            <input type="text" placeholder="What do you need?" name="searchString" />
                            <button type="submit" class="site-btn">SEARCH</button>
                            <input type="submit" value="Search" />
                            

                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

