@model IEnumerable<Ekart.Models.OrderSummary>

@{
    ViewData["Title"] = "OrderSummary";
    Layout = "_Layout";
}
<header class="header">

    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1>Ekart</h1>
            </div>
            <div class="col-lg-6">
                <nav class="header__menu">
                    <ul>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__cart">
            </div>
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>


<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">

            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form asp-controller="Search" asp-action="Results">
                            <input type="text" placeholder="What do you need?" name="searchString" />
                            <button type="submit" class="site-btn">SEARCH</button>
                            <input type="submit" value="Search" />
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Shopping Cart</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@item.Image_url" alt="Image1" asp-append-version="true">
                                        <h5>@Html.DisplayFor(modelItem => item.Product_Name)</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        $@Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <label type="text" >@Html.DisplayFor(modelItem => item.Product_Quantity)</label>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        $@Html.DisplayFor(modelItem => item.Subtotal)
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Home" asp-action="HomePage" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    @{
                        double subtot = @Model.Sum(i => i.Subtotal);
                        double tax = subtot * 0.15;
                        double tot = subtot + tax;
                    }
                    <ul>
                        <li>Subtotal <span>$@subtot</span></li>
                        <li>Taxes <span>$@tax</span></li>
                        <li>Total <span>$@tot</span></li>
                    </ul>
                        <a  asp-action="checkout" asp-controller="Payment" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->